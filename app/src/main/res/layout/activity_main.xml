<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:text="Good afternoon Jane"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Sun, 13 Aug 2023"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:background="@drawable/avator"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/etSearch"
            android:inputType="text"
            android:layout_marginTop="10dp"
            android:hint="Search for category"
            android:background="@drawable/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/black"
                android:text="NCDs categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                app:cardCornerRadius="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="183dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/running" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:text="Running"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                app:cardCornerRadius="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="183dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/food" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:text="Diet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                app:cardCornerRadius="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="183dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/smoking" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:text="Smoking and Drugs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                app:cardCornerRadius="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="183dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/heart" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:text="Heart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </TableRow>

                    <TableRow
                        android:layout_marginTop="20dp"
                        >

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="true"
                                app:cardCornerRadius="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="183dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/stress" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:text="Stress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="220dp">

                            <androidx.cardview.widget.CardView
                                android:clickable="false"
                                app:cardCornerRadius="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="183dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="centerCrop"
                                    />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_marginTop="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:text=""
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </TableRow>

                </TableLayout>

            </ScrollView>



        </LinearLayout>

    </LinearLayout>


</RelativeLayout>